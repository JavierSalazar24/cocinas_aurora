<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php
</IfModule>

Options -Indexes

<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
</IfModule>

ErrorDocument 403 https://cocinas-aurora.herokuapp.com/control_panel/403
ErrorDocument 404 https://cocinas-aurora.herokuapp.com/control_panel/404
ErrorDocument 500 https://cocinas-aurora.herokuapp.com/control_panel/500
ErrorDocument 503 https://cocinas-aurora.herokuapp.com/control_panel/503

RewriteEngine On
RewriteCond %{HTTP:X-Forwarded-Proto} =http
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_HOST} ^www.cocinas-aurora.herokuapp.com/control_panel [NC]
    RewriteRule (.*) https://cocinas-aurora.herokuapp.com/control_panel/$1 [R=301,L,QSA]
</IfModule>